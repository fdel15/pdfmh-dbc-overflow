<div class='container'>
  <% @questions.each do |q| %>
    <% if logged_in? %>
      <%= form_for :vote, method: "create", url: '/votes' do |f|  %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :votable_type, value: "Question" %>
        <%= f.hidden_field :votable_id, value: q.id %>
        <%= f.hidden_field :upvote, value: true %>
        <%= f.submit 'Upvote' %>
      <% end %>
    <% end %>
  <a href="/questions/<%= q.id %>" id="<%= q.id %>">
    <h2> <%= q.title %> <%= q.updated_at %> <br>
      points: <%= q.votes.count %>
    </h2>
    <p class='question_body'> <%= q.body %> </p>
  </a>

  <% end %>

</div>
