<div class='container'>
	<ul class = "user_info" >
		<h2>You asked <%= @user.questions.count %> Questions</h2>
		<% @user.questions.each do |question| %>
			<li>
				<%= link_to question.title, question_path(question) %>
			</li>
		<% end %><br><br>

		<h2>You answered <%= @user.answers.count %> Answers</h2>
		<% @user.answers.each do |answer| %>
			<li>
				<%= link_to answer.question.title, question_path(answer.question) %>
				<%=  %><br>
				<%= answer.body %>
			</li>
		<% end %>
		<li class = "user_buttons" >

		  <%= button_to "Edit", edit_user_path(@user), {method: "get"} %>
	    <%= button_to "Delete", @user, {method: "delete", confirm: "Are you sure you want to delete this user?"} %>
		</li>
	</ul>
</div>