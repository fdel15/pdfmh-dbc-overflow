<ul class = "user_info" >
	<li class = "user_info_item" >
		<%= @user.name %>
	</li>
	<li class = "user_info_item" >
		<%= @user.is_admin.to_s %>
	</li>
	<li class = "user_buttons" >
    <%= button_to "Delete", @user, {method: "delete", confirm: "Are you sure you want to delete this user?"} %>
	</li>
	<li class = "user_buttons" >
    <%= link_to "Edit", {action: "edit"}, method: "get" %>
	</li>
</ul>