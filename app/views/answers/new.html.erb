<p><h2>Add another answer!</h2></p>
  <%= form_for [@question, answer] do |f| %>
    <p><%= f.text_field :body, placeholder: 'add an answer' %></p>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :question_id, value: @question.id %>
    <p><%= f.submit "Submit" %></p>
  <% end %>