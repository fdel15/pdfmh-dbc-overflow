<div class='new_form'>
  <%= form_for :question, url: {action: "create"} do |f| %>

    <h2><%= label :title, "Title: " %></h2>
    <%= f.text_field :title %><br><br>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div id='new-question' class='question-text'>
      <%= f.text_area :body, cols: '92', rows: '10' %>
    </div>
    <div class='question-text'>
      <div id='question-preview'> </div>
    </div><br><br>
    <h2><%= f.label :tags %></h2>
    <%= f.text_field :question_tags, value: '', placeholder: "add tags" %><br><br>


    <%= f.submit "Submit Question" %>


  <% end %>
</div>
